<turbo-frame id="<%= dom_id assignment %>" class="block">
  <%= form_with(model: assignment, class:"text-lg inline-block my-3 w-72") do |form| %>
    <%= form.check_box :completed, data: {
                         id: assignment.id,
                         action: "assignments#toggle"
                       },
                       class: "mr-2 align-middle bg-gray-50 border-gray-300 focus:ring-3 focus:ring-blue-300 h-5 w-5 rounded checked:bg-green-500" %>
    <%= assignment.description %>
  <% end %>

  <%= link_to "Edit", edit_assignment_path(assignment),
              class: "btn bg-gray-100"
  %>
  <div class="inline-block ml-2">
    <%= button_to "Delete", assignment_path(assignment),
                  method: :delete,
                  data: { "turbo-frame": "_top" },
                  class: "btn bg-red-100" %>
  </div>
</turbo-frame>